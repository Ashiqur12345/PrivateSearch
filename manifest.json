{
    "manifest_version": 2,
    "name": "PrivateSearch",
    "description": "Search selected text in a private window",
    "version": "1.0",
    "author": "Ashman",
    
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "icons": {
        "12": "icons/privatesearch-12.png",
        "16": "icons/privatesearch-16.png",
        "32": "icons/privatesearch-32.png",
        "48": "icons/privatesearch-48.png",
        "64": "icons/privatesearch-64.png"
    },

    "permissions": [
        "tabs",
        "search",
        "contextMenus"
    ]
}
